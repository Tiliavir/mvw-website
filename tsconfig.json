{
  "compilerOptions": {
    "removeComments": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "allowUnreachableCode": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "allowJs": false,
    "alwaysStrict": true,
    "inlineSourceMap": false,
    "sourceMap": false,
    "forceConsistentCasingInFileNames": true,
    "compileOnSave": false
  },
  "include": [
    "partials/scripts/**/*.ts",
    "gulpfile.ts"
  ]
}

// Place your settings in this file to overwrite default and user settings.
{
  "editor.renderWhitespace": "all",
  "editor.tabSize": 2,

  "files.exclude": {
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/*.js.map": true,

    ".bowerrc": true,
    "*.csproj*": true,

    // folders:
    "**/*_modules/": true,
    "typings": true,
    "**/_book": true,

    "**/temp/": true,
    "**/tmp": true,
    "**/build": true,
    "**/bin": true,
    "**/obj": true
  },
  "typescript.tsdk": "./node_modules/typescript/lib",
  "json.schemas": [
    {
        "fileMatch": [
            "/assets/pages/data/berichte.json"
        ],
        "url": "./assets/pages/data/schema/berichte-schema.json"
    },
    {
        "fileMatch": [
            "/assets/pages/data/*register.json"
        ],
        "url": "./assets/pages/data/schema/register-schema.json"
    },
    {
        "fileMatch": [
            "/assets/pages/data/termine.json"
        ],
        "url": "./assets/pages/data/schema/termine-schema.json"
    },
    {
        "fileMatch": [
            "/assets/pages/data/news.json"
        ],
        "url": "./assets/pages/data/schema/news-schema.json"
    },
    {
        "fileMatch": [
            "/assets/pages/data/vorstand.json"
        ],
        "url": "./assets/pages/data/schema/vorstand-schema.json"
    }
  ]
}

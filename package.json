{
  "name": "mvw-website",
  "license": "MIT",
  "version": "21.01.26",
  "description": "Website of Musikverein Wollbach 1866 e.V.",
  "author": "Markus Lindenmann <tiliavir@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/Tiliavir/mvw-website.git"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "Firefox ESR",
    "ie 9-11"
  ],
  "devDependencies": {
    "@types/grecaptcha": "3.0.1",
    "@types/jquery": "3.5.5",
    "@types/lunr": "2.3.3",
    "@types/photoswipe": "4.1.1",
    "@typescript-eslint/eslint-plugin": "4.14.1",
    "@typescript-eslint/parser": "4.14.1",
    "autoprefixer": "10.2.3",
    "copyfiles": "2.4.1",
    "eslint": "7.18.0",
    "glob-all": "3.2.1",
    "glob": "7.1.6",
    "mvw-search-index": "2.2.0",
    "postcss": "8.2.4",
    "postcss-cli": "8.3.1",
    "sass-lint": "1.13.1",
    "typescript": "4.1.3",
    "w3cjs": "0.4.0"
  },
  "dependencies": {
    "lunr": "2.3.9",
    "photoswipe": "4.1.3"
  },
  "scripts": {
    "validate": "node validate.js",
    "lint": "sass-lint -c sass-lint.yml -v -q && npx eslint . --ext .ts",
    "build": "hugo --minify",
    "index": "mvw-search-index './public/**/*.html' './static/suche/index.json' 'main'",
    "update:lib:photoswipe:css": "copyfiles -u 3 ./node_modules/photoswipe/dist/photoswipe.css ./assets/gen/css/ && copyfiles -u 4 ./node_modules/photoswipe/dist/default-skin/default-skin.css ./assets/gen/css/",
    "update:lib:photoswipe:img": "copyfiles -u 4 ./node_modules/photoswipe/dist/default-skin/*.{svg,png,gif} ./static/bilder/",
    "update:lib:photoswipe": "npm run update:lib:photoswipe:css && npm run update:lib:photoswipe:img",
    "postinstall": "npm run update:lib:photoswipe && npm run lint"
  }
}

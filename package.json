{
  "name": "mvw-website",
  "version": "17.5.09",
  "private": true,
  "description": "Project to generate the website for Musikverein Wollbach 1866 e.V.",
  "author": "Musikverein Wollbach 1866 e.V.",
  "repository": {
    "type": "git",
    "url": "https://tiliavir.visualstudio.com/DefaultCollection/Website/_git/Website"
  },
  "config": {
    "pathToProd": "../mvw-prod/"
  },
  "devDependencies": {
    "@types/bootstrap": "^3.3.33",
    "@types/gulp": "^4.0.1",
    "@types/gulp-load-plugins": "^0.0.29",
    "@types/grecaptcha": "^2.0.33",
    "@types/lunr": "^0.5.28",
    "@types/marked": "^0.0.28",
    "@types/node": "^7.0.18",
    "@types/photoswipe": "^4.0.27",
    "@types/vinyl": "^2.0.0",
    "@types/yargs": "^6.6.0",

    "autoprefixer": "^7.0.1",
    "copyfiles": "^1.2.0",
    "node-sass": "^4.5.0",
    "postcss-cli": "^3.2.0",
    "sass-lint": "^1.10.2",
    "tslint": "^4.5.1",
    "typescript": "^2.3.2"
  },
  "dependencies": {
    "gulp": "^3.9.1",
    "gulp-data": "^1.2.1",
    "gulp-sequence": "^0.4.6",
    "gulp-flatten": "^0.3.1",
    "gulp-gray-matter": "^3.0.1",
    "gulp-htmlmin": "^3.0.0",
    "gulp-if": "^2.0.2",
    "gulp-load-plugins": "^1.5.0",
    "gulp-pug": "^3.3.0",
    "gulp-rename": "^1.2.2",
    "gulp-replace": "^0.5.4",
    "gulp-sitemap": "^4.2.0",

    "jquery": "^3.1.1",
    "jstransformer-marked": "^1.0.2",
    "marked": "^0.3.6",
    "moment": "^2.17.1",
    "mvw-navigation": "^1.0.4",
    "mvw-search-index": "^1.0.7",
    "photoswipe": "^4.1.2",
    "pug": "^2.0.0-rc.1"
  },
  "scripts": {
    "lint": "sass-lint -c sass-lint.yml -v -q && tslint -c tslint.json \"pages/scripts/**/*.ts\"",
    "clean": "rimraf ./build/ ./pages/{styles,scripts}/**/*.{css,js}",

    "precompile": "npm run clean && mkdir build",
    "compile:sass": "node-sass ./pages/styles/ -o ./pages/styles && postcss ./pages/styles/**/*.css -r --use autoprefixer",
    "compile": "tsc && npm run compile:sass && gulp",

    "copy:static": "copyfiles -u 2 ./root/_*/* %npm_package_config_pathToProd%/ && copyfiles -u 1 -a ./root/[!_]* %npm_package_config_pathToProd%/ && copyfiles -u 1 ./root/[!_]*/**/* %npm_package_config_pathToProd%/",
    "precopy": "copyfiles -u 3 ./src/bootstrap/js/bootstrap.min.js %npm_package_config_pathToProd%/js/ && copyfiles -u 3 ./node_modules/jquery/dist/jquery.min.js %npm_package_config_pathToProd%/js/ && copyfiles -u 4 ./node_modules/photoswipe/dist/default-skin/*.{svg,png,gif} %npm_package_config_pathToProd%/",
    "copy": "npm run copy:static && copyup ./build/**/* %npm_package_config_pathToProd%/",

    "prerelease": "npm run lint",
    "release": "npm run compile -- release --release=true && npm run copy"
  }
}

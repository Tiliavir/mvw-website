{
  "name": "mvw-website",
  "version": "1.0.11",
  "private": true,
  "description": "Project to generate the website for Musikverein Wollbach 1866 e.V.",
  "author": "Musikverein Wollbach 1866 e.V.",
  "repository": {
    "type": "git",
    "url": "https://mvw1866.visualstudio.com/DefaultCollection/Website/_git/Website"
  },
  "devDependencies": {
    "@types/bootstrap": "^3.3.32",
    "@types/grecaptcha": "^2.0.30",
    "@types/photoswipe": "^4.0.27",
    "autoprefixer": "^6.4.1",
    "copyfiles": "^1.0.0",
    "node-sass": "^3.10.0",
    "postcss-cli": "^2.6.0",
    "pug-lint": "^2.3.0",
    "sass-lint": "^1.9.1",
    "tslint": "^3.15.1",
    "typescript": "^2.0.2"
  },
  "dependencies": {
    "fs": "^0.0.2",
    "gulp": "^3.9.1",
    "gulp-bootlint": "^0.7.2",
    "gulp-data": "^1.2.1",
    "gulp-flatten": "^0.2.0",
    "gulp-gray-matter": "^3.0.1",
    "gulp-htmlmin": "^2.0.0",
    "gulp-if": "^2.0.1",
    "gulp-jsbeautifier": "^2.0.3",
    "gulp-load-plugins": "^1.3.0",
    "gulp-pug": "^2.0.0",
    "gulp-rename": "^1.2.2",
    "gulp-replace": "^0.5.4",
    "gulp-sequence": "^0.4.6",
    "gulp-sitemap": "^4.2.0",
    "gulp-util": "^3.0.7",
    "gulp-w3cjs": "^1.2.0",
    "jquery": "^3.1.0",
    "jstransformer-marked": "^1.0.1",
    "marked": "^0.3.5",
    "moment": "^2.15.0",
    "mvw-navigation": "./src/static_site_creator/navigation",
    "path": "^0.12.7",
    "photoswipe": "^4.1.1",
    "pug": "^2.0.0-beta6"
  },
  "scripts": {
    "lint": "sass-lint -c sass-lint.yml -v -q && tslint -c tslint.json \"assets/**/*.ts\" && pug-lint \"assets/**/*.pug\"",
    "clean": "rimraf ./build/ ./{assets,styles}/**/*.{css,js}",
    "precompile": "npm run clean && mkdir build",
    "compile:sass": "node-sass ./styles/ -o ./styles && node-sass ./assets/pages/styles/ -o ./assets/pages/styles && postcss --use autoprefixer ./{assets,styles}/*.css -r",
    "compile:ts": "tsc",
    "compile": "npm run compile:ts && npm run compile:sass && gulp",
    "precopy": "copyfiles -u 3 ./src/bootstrap/js/bootstrap.min.js C:/Data/Code/Prod/js/ && copyfiles -u 3 ./node_modules/jquery/dist/jquery.min.js C:/Data/Code/Prod/js/ && copyfiles -u 4 ./node_modules/photoswipe/dist/default-skin/*.{svg,png,gif} C:/Data/Code/Prod/",
    "copy": "copyup ./build/**/* ../Prod/",
    "debug": "npm run compile && npm run copy",
    "prerelease": "npm run lint"
    "release": "npm run compile -- release --release=true && npm run copy",
  }
}

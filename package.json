{
    "name": "mvw-website",
    "version": "17.06.21",
    "private": true,
    "description": "Project to generate the website for Musikverein Wollbach 1866 e.V.",
    "author": "Musikverein Wollbach 1866 e.V.",
    "repository": {
        "type": "git",
        "url": "https://tiliavir.visualstudio.com/DefaultCollection/Website/_git/Website"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "Firefox ESR",
        "ie 9-11"
    ],
    "devDependencies": {
        "@types/gulp": "4.0.4",
        "@types/gulp-load-plugins": "0.0.29",
        "@types/grecaptcha": "2.0.33",
        "@types/jquery": "3.2.7",
        "@types/lunr": "0.5.29",
        "@types/marked": "0.0.28",
        "@types/node": "8.0.12",
        "@types/photoswipe": "4.0.28",
        "@types/vinyl": "2.0.0",
        "@types/yargs": "8.0.1",

        "autoprefixer": "7.1.2",
        "copyfiles": "1.2.0",
        "node-sass": "4.5.3",
        "postcss-cli": "4.1.0",
        "lite-server": "2.3.0",
        "sass-lint": "1.10.2",
        "tslint": "5.5.0",
        "typescript": "2.4.1"
    },
    "dependencies": {
        "gulp": "github:gulpjs/gulp#4.0",
        "gulp-data": "1.2.1",
        "gulp-flatten": "0.3.1",
        "gulp-front-matter": "1.3.0",
        "gulp-htmlmin": "3.0.0",
        "gulp-if": "2.0.2",
        "gulp-load-plugins": "1.5.0",
        "gulp-pug": "3.3.0",
        "gulp-rename": "1.2.2",
        "gulp-replace": "0.6.1",
        "gulp-sitemap": "4.2.0",

        "jquery": "3.2.1",
        "jstransformer-marked": "1.0.2",
        "marked": "0.3.6",
        "moment": "2.18.1",
        "mvw-navigation": "2.0.2",
        "mvw-search-index": "2.1.1",
        "mvw-gallery": "1.0.5",
        "photoswipe": "4.1.2",
        "pug": "2.0.0-rc.2"
    },
    "scripts": {
        "lint": "sass-lint -c sass-lint.yml -v -q && tslint -c tslint.json \"partials/scripts/**/*.ts\"",

        "clean": "rimraf ./build/ ./partials/{styles,scripts}/**/*.{css,js}",
        "postclean": "mkdir build",

        "compile:sass": "node-sass ./partials/styles/ -o ./partials/styles && postcss ./partials/styles/**/*.css -r --use autoprefixer --no-map",
        "compile": "tsc && npm run compile:sass && gulp",

        "copy:lib": "copyfiles -u 3 ./node_modules/jquery/dist/jquery.min.js ./build/js/ && copyfiles -u 4 ./node_modules/photoswipe/dist/default-skin/*.{svg,png,gif} ./build/",
        "copy:root": "copyfiles -u 2 ./root/_*/* ./build/ && copyfiles -u 1 -a ./root/[!_]* ./build/ && copyfiles -u 1 ./root/[!_]*/**/* ./build/",
        "copy": "npm run copy:lib && npm run copy:root",

        "prerelease": "npm run lint",
        "release": "npm run compile -- release --release=true && npm run copy",
        "postrelease": "mvw-search-index ./build/**/*.html ./build/index.json main",

        "copy:todiff": "copyup -a ./build/**/* ../mvw-prod/",

        "dev": "npm run compile",
        "serve": "lite-server"
    }
}
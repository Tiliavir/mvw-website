{
  "name": "mvw-website",
  "license": "MIT",
  "version": "20.12.25",
  "description": "Website of Musikverein Wollbach 1866 e.V.",
  "author": "Markus Lindenmann <tiliavir@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/Tiliavir/mvw-website.git"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "Firefox ESR",
    "ie 9-11"
  ],
  "devDependencies": {
    "@types/grecaptcha": "3.0.1",
    "@types/lunr": "2.3.3",
    "@types/photoswipe": "4.1.0",
    "@types/jquery": "3.5.5",
    "autoprefixer": "9.8.6",
    "postcss-cli": "7.1.2",
    "sass-lint": "1.13.1",
    "tslint": "6.1.3",
    "copyfiles": "2.4.1",
    "typescript": "^4.1.3",
    "gulp": "4.0.2",
    "gulp-w3cjs": "1.3.2"
  },
  "dependencies": {
    "hugo-lunr": "0.0.4",
    "lunr": "2.3.9",
    "photoswipe": "4.1.3"
  },
  "scripts": {
    "validate": "gulp default",
    "lint": "sass-lint -c sass-lint.yml -v -q && tslint --project ./",
    "build": "hugo --minify",
    "index": "hugo-lunr -o ./public/suche/lunr.json",
    "update:lib:photoswipe:css": "copyfiles -u 3 ./node_modules/photoswipe/dist/photoswipe.css ./assets/css/ && copyfiles -u 4 ./node_modules/photoswipe/dist/default-skin/default-skin.css ./assets/css/",
    "update:lib:photoswipe:js": "copyfiles -u 3 ./node_modules/photoswipe/dist/photoswipe.min.js ./assets/js/ && copyfiles -u 3 ./node_modules/photoswipe/dist/photoswipe-ui-default.min.js ./assets/js/",
    "update:lib:photoswipe:img": "copyfiles -u 4 ./node_modules/photoswipe/dist/default-skin/*.{svg,png,gif} ./static/",
    "update:lib:photoswipe": "npm run update:lib:photoswipe:css && npm run update:lib:photoswipe:js && npm run update:lib:photoswipe:img",
    "update:lib:lunr": "copyfiles -u 2 ./node_modules/lunr/lunr.js ./assets/js/",
    "postinstall": "npm run update:lib:photoswipe && npm run lint"
  }
}

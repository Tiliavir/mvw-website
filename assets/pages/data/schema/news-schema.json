{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "JSON Schema for my JSON file format",
  "type": "object",
  "additionalProperties": {
    "type": "array",
    "items": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "image": {
          "type": "object",
          "properties": {
            "src": {
              "type": "string"
            },
            "title": {
              "type": "string"
            },
            "caption": {
              "type": "string"
            }
          },
          "required": [
            "src",
            "title"
          ],
          "additionalProperties": false
        },
        "video": {
          "type": "object",
          "properties": {
            "src": {
              "type": "string"
            }
          },
          "required": [
            "src"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "title"
      ],
      "additionalProperties": false
    }
  },
  "additionalItems": false
}

include ./mixins/image.jade
include ./mixins/youtube.jade
include ./mixins/formatTimespan.jade

doctype html
html(lang="de")
  head
    title #{siteTitle}
    if isRelease
      base(href=baseUrl)
    meta(charset="utf-8")
    meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
    meta(name="author" content="Markus Lindenmann")

    if description
      meta(name="description" content="#{description}")

    if keywords
      meta(name="keywords" content="#{keywords}")

    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")

    link(rel="stylesheet" href="/css/app.css")

    include ./favicon.jade

    script(src="/js/app.js")

    <!--[if lt IE 9]>
    script(src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js")
    script(src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js")
    <![endif]-->

  body
    nav#header.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
      .container
        .navbar-header
          button.navbar-toggle(type="button" data-toggle="collapse" data-target="#mvw-navbar-collapse-1")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="index.html")
            img(alt="Musikverein Wollbach 1866 e.V." src="/img/logo.png")
        #mvw-navbar-collapse-1.collapse.navbar-collapse
          include ./topnavigation.jade

    <!--PRE:HEADER-->

    #content-main.container
      .row
        .col-lg-12
          h1.page-header #{pageTitle}
            if pageSubTitle
              small #{pageSubTitle}
          | !{breadcrumb}
      .row
        .col-lg-12
          <!--PRE:CONTENT-->

    #footer.navbar.navbar-default
      .container
        #footerLinks.muted.pull-left
          include ./footernavigation.jade

    script(src="/js/bootstrap.min.js")
    if isRelease
      include ./ga.jade

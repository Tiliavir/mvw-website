include ./mixins/image.jade
include ./mixins/youtube.jade
include ./mixins/formatTimespan.jade

doctype html
//- xmlns:og="http://ogp.me/ns#" xmlns:fb="http://www.facebook.com/2008/fbml"
html(lang="de")
  head
    title #{siteTitle}
    if isRelease
      base(href=baseUrl)
    meta(charset="utf-8")
    meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
    meta(name="author" content="#{scope.settings.siteTitle}")

    if page.description
      meta(name="description" content="#{page.description}")
    if page.keywords
      meta(name="keywords" content="#{page.keywords}")

    meta(property="og:type" content="website")
    meta(property="og:image" content="#{baseUrl}img/logo_color.png")
    meta(property="og:locale" content="de_DE")
    meta(property="og:site_name" content="#{scope.settings.siteTitle}")

    meta(property="fb:admins" content="100000073380067")/

    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")

    style
      include ./css/app.css
    link(rel="stylesheet" media="print" href="/css/print.css?v=#{buildNumber}")

    if page.hasAmp
      link(rel="amphtml" href="#{baseUrl}amp/#{page.referencedFile}.html")

    include ./favicon.jade

  body(itemscope itemtype="http://schema.org/#{page.schemaOrg || 'WebPage'}")
    nav#header.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
      .container
        .navbar-header
          button.navbar-toggle(type="button" data-toggle="collapse" data-target="#mvw-navbar-collapse-1")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="index.html")
            img(alt="#{scope.settings.siteTitle}" src="/img/logo.svg")
        #mvw-navbar-collapse-1.collapse.navbar-collapse
          include ./topnavigation.jade

    <!--PRE:HEADER-->
    img#print-logo.visible-print(src="/img/logo_color.png" alt="#{scope.settings.siteTitle}")

    #content-main.container(itemprop="mainContentOfPage")
      .row
        .col-lg-12
          h1.page-header #{page.title}
            if page.subtitle
              small #{page.subtitle}
          | !{breadcrumb}
      .row
        .col-lg-12
          <!--PRE:CONTENT-->

    #footer.navbar.navbar-default
      .container
        #footerLinks.muted.pull-left
          include ./footernavigation.jade

    script(src="/js/jquery.min.js")
    script(src="/js/bootstrap.min.js")
    script(src="/js/app.js?v=#{buildNumber}")
    if hasScript()
      script(src="/js/#{page.referencedFile}.js?v=#{buildNumber}")
    if isRelease
      include ./ga.jade

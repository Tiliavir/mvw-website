{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "JSON Schema for my JSON file format",

  "type": "array",

  "items": {
    "properties": {
      "date": {
        "type": "string",
        "format": "date-time"
      },
      "title": {
        "type": "string"
      },
      "url": {
        "type": "string"
      },
      "hasPicture": {
        "type": "boolean",
        "default": false
      },
      "hasDescription": {
        "type": "boolean",
        "default": false
      },
      "srcTitle": {
        "type": "string"
      },
      "srcUrl": {
        "type": "string"
      }
    },
    "additionalProperties": false,
    "required": [ "date", "title", "url", "srcTitle", "srcUrl" ]
  },
  "additionalItems": false
}

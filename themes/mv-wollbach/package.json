  "version": "20.12.25",
  "description": "Hugo theme for the website of Musikverein Wollbach 1866 e.V.",
  "author": "Markus Lindenmann <tiliavir@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/Tiliavir/mv-website.git"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "Firefox ESR",
    "ie 9-11"
  ],
  "devDependencies": {
    "@types/jquery": "3.5.1",
    "autoprefixer": "9.8.6",
    "postcss-cli": "7.1.2",
    "sass-lint": "1.13.1",
    "tslint": "6.1.3",
    "copyfiles": "2.4.1"
  },
  "dependencies": {
    "jquery": "3.5.1"
  },
  "scripts": {
    "lint": "sass-lint -c sass-lint.yml -v -q && tslint --project ./",
    "update:lib:jquery": "copyfiles -u 3 ./node_modules/jquery/dist/jquery.min.js ./static/js/",
    "update:lib:photoswipe": "copyfiles -u2 ./node_modules/photoswipe/dist/**/*, ./static/photoswipe",
    "postinstall": "npm run update:lib:jquery && update:lib:photoswipe && npm run lint",
    "test": "todo: validate the build result!!"
  }
}
